<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
    <LinearLayout android:id="@+id/unicomlayout" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:orientation="horizontal">
      <TextView android:id="@+id/sumtextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/DW3_string_53" android:textSize="14sp"/>
      <TextView android:id="@+id/sumet" android:layout_width="120dp" android:layout_height="wrap_content"/>
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/DW3_string_54" android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/creditdellayout" android:layout_below="@+id/unicomlayout" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:orientation="vertical">
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/DW3_string_55" android:textSize="14sp"/>
      <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <ImageView android:id="@+id/valcash" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/payvalue"/>
        <Spinner android:id="@+id/loginspinner" android:layout_width="240dp" android:layout_gravity="center_horizontal" android:layout_height="wrap_content"/>
      </LinearLayout>
      <EditText android:id="@+id/cardnum" android:layout_marginTop="10dp" android:layout_width="280dp" android:layout_height="wrap_content" android:background="@drawable/editbg" android:drawableLeft="@drawable/cardnum" android:hint="@string/DW3_string_56" android:maxLength="25" android:singleLine="true" android:textSize="14sp"/>
      <EditText android:id="@+id/password" android:layout_marginTop="10dp" android:layout_width="280dp" android:layout_height="wrap_content" android:background="@drawable/editbg" android:drawableLeft="@drawable/cardpasswd" android:hint="@string/DW3_string_57" android:maxLength="25" android:singleLine="true" android:textSize="14sp"/>
      <TextView android:id="@+id/introtv" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:text="@string/DW3_string_58"/>
    </LinearLayout>
    <Button android:id="@+id/paynow" android:layout_marginTop="5dp" android:layout_below="@+id/creditdellayout" android:layout_width="280dp" android:layout_height="28dp" android:background="@drawable/btn_pay"/>
  </RelativeLayout>
</RelativeLayout>