<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:id="@+id/head" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/itembg" android:gravity="center">
    <Button android:id="@+id/btsign_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginLeft="10dp" android:background="@drawable/back"/>
    <TextView android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="22sp" android:textStyle="bold" android:text="@string/DW4_string_80" android:textColor="@color/black"/>
  </RelativeLayout>
  <RelativeLayout android:id="@+id/login_relative" android:layout_width="300dp" android:layout_height="100dp" android:layout_marginTop="80dp">
    <TextView android:id="@+id/text_head" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/text_hint" android:textStyle="bold"/>
    <TextView android:id="@+id/text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/text_head"/>
  </RelativeLayout>
  <LinearLayout android:id="@+id/linear_button" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_marginTop="150dp" android:gravity="center" android:orientation="vertical">
    <Button android:id="@+id/btn_initAK" android:layout_width="fill_parent" android:layout_height="40dp" android:layout_below="@id/text" android:background="@color/black" android:text="@string/text_btn_initAK"/>
    <Button android:id="@+id/btn_init" android:layout_width="fill_parent" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_below="@id/btn_initAK" android:background="@color/orange" android:text="@string/text_btn_init"/>
    <Button android:id="@+id/btn_setTags" android:layout_width="fill_parent" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_below="@id/btn_init" android:background="@color/orange" android:text="@string/text_btn_setTags"/>
    <Button android:id="@+id/btn_delTags" android:layout_width="fill_parent" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_below="@id/btn_setTags" android:background="@color/orange" android:text="@string/text_btn_delTags"/>
    <Button android:id="@+id/btn_rich" android:layout_width="fill_parent" android:layout_marginTop="20dp" android:layout_height="40dp" android:layout_below="@id/btn_delTags" android:background="@color/orange" android:text="@string/reset"/>
  </LinearLayout>
</RelativeLayout>