<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:id="@+id/bingdinglayout" android:layout_width="324dp" android:layout_height="195dp" android:layout_centerInParent="true" android:background="@drawable/backgroundmiddle">
    <RelativeLayout android:id="@+id/headlayout" android:layout_width="fill_parent" android:layout_height="30dp" android:orientation="horizontal">
      <ImageView android:id="@+id/back" android:layout_width="28dp" android:layout_height="28dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:src="@drawable/back"/>
      <ImageView android:id="@+id/login1" android:layout_width="66dp" android:layout_height="21dp" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:src="@drawable/zhaohuimima"/>
    </RelativeLayout>
    <TextView android:id="@+id/introbind" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/DW4_string_6" android:layout_below="@+id/headlayout" android:layout_centerHorizontal="true" android:textSize="13sp" android:layout_marginTop="15dp" android:textColor="@color/black"/>
    <EditText android:id="@+id/userbind" android:layout_below="@+id/introbind" android:layout_width="235dp" android:layout_height="wrap_content" android:hint="@string/DW4_string_7" android:textSize="13sp" android:layout_marginTop="5dp" android:layout_centerHorizontal="true" android:background="@drawable/editbg" android:drawableLeft="@drawable/usernamebg">
      <requestFocus/>
    </EditText>
    <EditText android:id="@+id/phonumbind" android:layout_below="@+id/userbind" android:layout_width="235dp" android:layout_height="wrap_content" android:hint="@string/DW4_string_8" android:textSize="13sp" android:layout_marginTop="5dp" android:layout_centerHorizontal="true" android:background="@drawable/editbg" android:drawableLeft="@drawable/yybangding">
      <requestFocus/>
    </EditText>
    <RelativeLayout android:id="@+id/passlayout" android:layout_width="235dp" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_below="@+id/phonumbind">
      <Button android:id="@+id/getidenum" android:layout_width="40dp" android:layout_height="25dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_centerVertical="true" android:textSize="13sp" android:text="@string/DW4_string_9" android:layout_toRightOf="@+id/idenumbind" android:layout_alignParentRight="true" android:background="@drawable/selectbar"/>
      <EditText android:id="@+id/idenumbind" android:layout_below="@+id/phonumbind" android:layout_width="150dp" android:layout_height="wrap_content" android:hint="@string/DW4_string_10" android:textSize="13sp" android:layout_marginTop="5dp" android:layout_alignParentLeft="true" android:background="@drawable/editbg" android:drawableLeft="@drawable/yayrec"/>
    </RelativeLayout>
    <Button android:id="@+id/nowbind" android:layout_below="@+id/passlayout" android:layout_width="235dp" android:layout_height="28dp" android:layout_marginTop="5dp" android:textSize="13sp" android:text="@string/DW4_string_11" android:layout_centerHorizontal="true" android:background="@drawable/selectbar"/>
  </RelativeLayout>
</RelativeLayout>